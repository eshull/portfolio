<p id="notice"><%= notice %></p>
<div class="header row ">
  <div class="dev_header">
    <h2>DEVELOPMENT & DESIGN</h2>
  </div>
</div>


  <% @development_posts.each do |post| %>
    <div class="post">
      <div class="post_image">
        <%= image_tag( post.img_tag, :alt => "type", :class => "img-fluid") %>
      </div>
      <div class="post_info">
        <div class="info_box">
          <div class="info">
            <p class="title"><%= post.title %></p>
            <p class="author" >By: <%= post.author %></p>
            <p class="category">Category: <%= post.category %></p>
            <p class="category"> <a href="<%= post.url %>">Check out project</a>  </p>
            <p class="content"><%= post.content %></p>
            <p><%= link_to 'Project Details', post %></p>
            <% if @user.admin? %>
              <p><%= link_to 'Edit', edit_post_path(post) %></p>
              <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% @design_posts.each do |post| %>
    <div class="post">
      <div class="post_image">
        <%= image_tag( post.img_tag, :alt => "type", :class => "img-fluid") %>
      </div>
      <div class="post_info">
        <div class="info_box">
          <div class="info">
            <p class="title"><%= post.title %></p>
            <p class="author" >By: <%= post.author %></p>
            <p class="category">Category: <%= post.category %></p>
            <a class="category-link"> <%= link_to post.url %></a>
            <p class="content"><%= post.content %></p>
            <p><%= link_to 'Project Details', post %></p>
            <% if @user.admin? %>
              <p><%= link_to 'Edit', edit_post_path(post) %></p>
              <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

