<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.typekit.net/pgl3mcb.css">
  </head>

  <body>
    <div class="container-fluid">
      <div class="nav col-md-2">

        <div class="navbar-text">
          <h2>Eric Shull <small>Web Developer</small></h2>
        </div>
        <div class="navbar-text">
          <h2><%= link_to "Home", posts_path %></h2>
        </div>
        <div class="navbar-text">
          <h2><%= link_to 'New Post', new_post_path %></h2>
        </div>
        <div class="navbar-text newProduct">
          <h2><%= link_to "Add New Post", new_post_path %></h2>
        </div>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>

  </body>
</html>
